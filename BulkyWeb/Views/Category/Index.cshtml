@model List<Category>
@{
    ViewData["Title"] = "Category";
}
<div class="card shadow border-0 mb-5 mt-5 pt-2">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-4 text-center">
                <h3 class="text-white">Category List</h3>
            </div>
            <div class="col-4">
                <div class="form-outline" data-mdb-input-init>
                    <input class="rounded-bottom-3 px-2 bg-light" type="search" placeholder="search category" id="form1" aria-label="Search" />                    
                </div>
            </div>
            <div class="col-4 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i>  Create Category
                </a>
            </div>
            <div class="row">
                <div class="col-10 text-center">

                </div>
                <div class="col-2 text-center">
                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">Sort by</button>
                    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "asc" })">sort by name [A-Z]</a></li>
                       <li><a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "desc" })">sort by name [Z-A]</a></li>
                       <li><a class="dropdown-item" href="@Url.Action("Index",new {sortOrder="pair"})">sort by display order [0-N]</a></li>
                       <li><a class="dropdown-item" href="@Url.Action("Index", new {sortOrder="o"})">sort by name [N-0]</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body pt-3">
        <table class="table table-bordered table-striped table-hover">
              <thead class="table-borderless">
                    <tr>
                        <th>Name</th>
                        <th>Display Order</th>
                    </tr>
              </thead>
              <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td class="custom-medium-text">@row.Name</td>
                            <td class="custom-medium-text">@row.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@row.Id" class="btn btn-primary mx-2 custom-medium-text">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@row.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
              </tbody>
        </table>        
    </div>
</div>