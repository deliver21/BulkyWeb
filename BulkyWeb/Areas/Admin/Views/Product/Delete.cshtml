@model Product;
@{
    ViewData["tilte"] = "Delete";
}
@*Card is used to have grid in the border of your form or table or any element*@
<div class="card shadow mb-5 mt-5 pt-2">
    @*The card has the header *@
    <div class="card-header bg-primary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Category</h2>
            </div>
        </div>
    </div>
    @*And here the body that contain the body content inside*@
    <div class="card-body">
        <form method="post" class="row">
            <div class="border pb-3">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="All" class="text-danger-emphasis"></div>
                <div asp-validation-summary="All" class="text-danger-emphasis"></div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="Title" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    @*Place holder is basically used to write someting inside the input ssection while waiting for text
                    entry inside , whenever there's a entry inside , it dissapears
                    however in our context since we used the form-floating class it differently works
                    As long we don't click in input section the label text is big , else the size decreases.'
                    *@
                    <input asp-for="Description" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="ISBN" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="Author" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="ListPrice" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="Price" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="Price50" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="mb-3 form-floating col-12">
                    <input asp-for="Price100" placeholder="" class="form-control border-0 shadow ps-lg-4" disabled/>
                    <label asp-for="Price100" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-3 col-md-3">
                        <button type="submit" class="btn btn-primary bg-dark" style="width:150px">
                            Delete
                        </button>
                    </div>
                    <div class="col-6">
                    </div>
                    <div class="col-3 col-md-3 text-end">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                            Back to list
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>


