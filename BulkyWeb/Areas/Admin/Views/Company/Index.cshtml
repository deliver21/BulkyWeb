@model List<Company>
@{
    ViewData["Title"] = "Company";
}
<div class="card shadow border-0 my-5 mb-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-4">

            </div>
            <div class="col-4 col-sm-4 text-center">
                <h3 class="text-white">Company List</h3>
            </div>
             <div class="col-4 col-sm-4 text-end">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> Create New Company
                </a>
            </div>
        </div>
    </div>
    <div class="card-body pt-3">
        <table id="tblData" class="table table-bordered table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Phone Number</th>
                    <th></th>                    
                    <th></th>
                </tr>
            </thead>            
        </table>
    </div>
</div>
@section Scripts
{
    <script src="~/js/company.js"></script>
}